<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegActivity">

    <EditText
        android:id="@+id/et_username_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="193dp"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_passwd1_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/et_username_reg"
        app:layout_constraintTop_toBottomOf="@+id/et_username_reg" />

    <EditText
        android:id="@+id/et_passwd2_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="confirm your password"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/et_passwd1_reg"
        app:layout_constraintTop_toBottomOf="@+id/et_passwd1_reg" />

    <EditText
        android:id="@+id/et_email_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="your email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/et_passwd2_reg"
        app:layout_constraintTop_toBottomOf="@+id/et_passwd2_reg" />

    <EditText
        android:id="@+id/et_phone_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="your phone number"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/et_idcard_reg"
        app:layout_constraintEnd_toEndOf="@+id/et_email_reg" />

    <EditText
        android:id="@+id/et_idcard_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="your id card"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/cb_isDriver"
        app:layout_constraintStart_toStartOf="@+id/et_phone_reg" />

    <CheckBox
        android:id="@+id/cb_isDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="86dp"
        android:text="Driver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_submit_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_idcard_reg" />
</androidx.constraintlayout.widget.ConstraintLayout>